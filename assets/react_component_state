class App extends React.Component {
    
  constructor(props) {
    super(props)
    this.state = {
      feliz: true
    }
    this.toggleFace = this.toggleFace.bind(this)
  }

  render() {
    return (
      <div onClick={this.toggleFace} style={{fontSize: 50}}>
        { this.state.feliz ? <p>ðŸ˜€</p> : <p>ðŸ˜ž</p>}
        {/*
          if(this.state.feliz) {
            return ðŸ˜€
          } else {
            return ðŸ˜ž
          }
        */}
      </div>
    )
  }

  toggleFace() {
    this.setState({
      feliz: !this.state.feliz
    })
  }

}

ReactDOM.render(
  <App />,
  document.getElementById('container')
);